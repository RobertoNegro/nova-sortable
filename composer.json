{
  "name": "optimistdigital/nova-sortable",
  "description": "This Laravel Nova package allows you to reorder models in a Nova resource's index view using drag & drop.",
  "keywords": [
    "laravel",
    "nova",
    "eloquent-sortable",
    "optimistdigital"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.0",
    "spatie/eloquent-sortable": "dev-feature-sorted-event",
    "laravel/nova": "^3.0",
    "optimistdigital/nova-translations-loader": "^3.0.0"
  },
  "autoload": {
    "psr-4": {
      "OptimistDigital\\NovaSortable\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "OptimistDigital\\NovaSortable\\ToolServiceProvider"
      ]
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/RobertoNegro/eloquent-sortable"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
